<?xml version="1.0"?>
<form version="1.1">
  <label>Easy Search</label>
  <!-- use the autoRun attribute so the form runs when loaded -->
  <!--<fieldset autoRun="True">-->
  <fieldset>
    <input type="text" token="user">
      <label>User</label>
      <default/>
      <prefix>user=</prefix>
      <initialValue/>
    </input>
    <input type="text" token="src">
      <label>Src IP</label>
      <default/>
      <prefix>src=</prefix>
      <initialValue/>
    </input>
    <input type="text" token="dest">
      <label>Dest</label>
      <default/>
      <prefix>dest=</prefix>
      <initialValue/>
    </input>
    <input type="text" token="http_user_agent">
      <label>User-Agent</label>
      <default/>
      <prefix>http_user_agent=</prefix>
      <initialValue/>
    </input>
    <input type="multiselect" token="action" searchWhenChanged="true">
      <default>allowed,blocked,auth,error</default>
      <prefix>(</prefix>
      <suffix>)</suffix>
      <valuePrefix>action="</valuePrefix>
      <valueSuffix>"</valueSuffix>
      <delimiter> OR </delimiter>
      <choice value="allowed">allowed</choice>
      <choice value="blocked">blocked</choice>
      <choice value="auth">auth</choice>
      <choice value="error">error</choice>
      <label>Action</label>
    </input>
    <input type="time" searchWhenChanged="false">
      <default>
        <earliest>-30m</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <search id="baseSearch">
    <query> `index_and_sourcetype` $user$ $src$ $dest$ $http_user_agent$ $action$ | fields user src dest http_user_agent action status category bytes_in bytes_out bytes_to_client bytes_from_client block_id url_domain rule</query>
  </search>
  <row>
    <chart>
      <title>Status Code Overview</title>
      <search base="baseSearch">
        <query>timechart count by status</query>
      </search>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">log</option>
      <option name="charting.chart">line</option>
      <option name="charting.chart.nullValueMode">zero</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">default</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <table>
      <title>Web Usage by URL Category</title>
      <search base="baseSearch">
        <query> stats sparkline count, dc(dest) AS "# Dest", sum(bytes_in)  AS "Bytes from Server", sum(bytes_out) AS "Bytes to Server" by category | sort -count</query>
      </search>
      <option name="showPager">true</option>
      <option name="count">10</option>
      <option name="wrap">true</option>
      <option name="rowNumbers">true</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
    </table>
  </row>
  <row>
    <chart>
      <title>Web Usage by URL Category Area Graph</title>
      <search base="baseSearch">
        <query> timechart count by category | sort -count</query>
      </search>
      <option name="showPager">true</option>
      <option name="count">10</option>
      <option name="wrap">true</option>
      <option name="rowNumbers">true</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">area</option>
      <option name="charting.chart.nullValueMode">zero</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <table>
      <title>Top User-Agents </title>
      <search base="baseSearch">
        <query>stats sparkline count AS Total_Requests,sum(eval(action="blocked")) AS Blocked_Requests, sum(eval(action="auth")) AS Auth_Requests, sum(bytes_in)  AS bytes_in, sum(bytes_out) AS bytes_out, sum(bytes_to_client) AS bytes_to_client, sum(bytes_from_client) AS bytes_from_client by http_user_agent|sort -Total_Requests | eval bytes_in_MB = `format_bytes(bytes_in)`, bytes_out_MB= `format_bytes(bytes_out)`, bytes_to_client_MB = `format_bytes(bytes_to_client)`, bytes_from_client_MB= `format_bytes(bytes_from_client)` | sort -Total_Requests </query>
      </search>
      <option name="showPager">true</option>
      <option name="rowNumbers">true</option>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <table>
      <title>Users + IPs</title>
      <search base="baseSearch">
        <query>stats sparkline values(user) AS user, count AS Total_Requests,sum(action="blocked") AS Blocked_Requests, sum(action="auth") AS Auth_Requests,sum(bytes_in) AS bytes_in ,sum(bytes_to_client) AS bytes_to_client by src|sort -Total_Requests</query>
      </search>
      <option name="showPager">true</option>
      <option name="count">10</option>
      <option name="wrap">true</option>
      <option name="rowNumbers">true</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
    </table>
  </row>
  <row>
    <chart>
      <title>IP Addresses by Hits Graph</title>
      <search base="baseSearch">
        <query>timechart count by src </query>
      </search>
      <option name="showPager">true</option>
      <option name="count">10</option>
      <option name="wrap">true</option>
      <option name="rowNumbers">true</option>
      <option name="dataOverlayMode">none</option>
      <option name="drilldown">row</option>
      <option name="charting.axisTitleX.visibility">visible</option>
      <option name="charting.axisTitleY.visibility">visible</option>
      <option name="charting.axisX.scale">linear</option>
      <option name="charting.axisY.scale">linear</option>
      <option name="charting.chart">area</option>
      <option name="charting.chart.nullValueMode">zero</option>
      <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
      <option name="charting.chart.stackMode">stacked</option>
      <option name="charting.chart.style">shiny</option>
      <option name="charting.drilldown">all</option>
      <option name="charting.layout.splitSeries">0</option>
      <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
      <option name="charting.legend.placement">right</option>
    </chart>
  </row>
  <row>
    <table>
      <title>Top Hosts by Hits </title>
      <search base="baseSearch">
        <query>stats sparkline count AS Total_Requests,sum(eval(action="blocked")) AS Blocked_Requests, sum(eval(action="auth")) AS Auth_Requests, sum(bytes_in)  AS bytes_in, sum(bytes_to_client) AS bytes_to_client, sum(bytes_out) AS bytes_out, sum(bytes_from_client) AS bytes_from_client by dest |sort -Total_Requests</query>
      </search>
      <option name="showPager">true</option>
      <option name="rowNumbers">true</option>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <table>
      <title>Top Blocked Domains by Hits</title>
      <search base="baseSearch">
        <query> search action="blocked" block_id != 0 | eval url_domain=coalesce(url_domain, dest) | stats count, dc(dest) AS "# dest", values(dest) AS dest, values(category) AS category, values(web_reputation) AS web_reputation, values(block_reason) AS block_reason, values(rule) AS rule by url_domain| sort -count</query>
      </search>
      <option name="showPager">true</option>
      <option name="rowNumbers">true</option>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <table>
      <title>Top Rules by Hits</title>
      <search base="baseSearch">
        <query>stats sparkline count AS Total_Requests, dc(dest) AS "# of dest", dc(src) AS "# of src" by rule|sort -Total_Requests</query>
      </search>
      <option name="showPager">true</option>
      <option name="rowNumbers">true</option>
      <option name="count">10</option>
    </table>
  </row>
  <row>
    <event>
      <title>Events</title>
      <search base="baseSearch">
        <query/>
      </search>
      <option name="type">raw</option>
      <option name="count">20</option>
      <option name="showPager">true</option>
      <option name="raw.drilldown">none</option>
    </event>
  </row>
</form>
